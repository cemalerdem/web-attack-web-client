@using System.Globalization
@using NotionPlanner.Shared.Models.Notion

<h3>Job</h3>

<li class="draggable" draggable="true" title="@JobModel.Detail" @ondragstart="@(()=>HandleDragStart(JobModel))">
    <p class="description">@JobModel.Detail</p>
    <p class="last-updated"><small>Updated Time></small>@JobModel.UpdatedTime.ToString(CultureInfo.InvariantCulture)</p>
</li>

@code {
    [CascadingParameter] JobsContainer Container { get; set; }
    [Parameter] public JobModel JobModel { get; set; }

    private void HandleDragStart(JobModel selectedJobModel)
    {
        Container.Payload = selectedJobModel;
    }
}
